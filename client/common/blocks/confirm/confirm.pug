.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog.modal-sm.confirm-dialog(role='document')
    .modal-content
      if self.html
        .modal-body!= self.html
      else
        .modal-body= self.message
      .modal-footer
        button.btn.btn-secondary(type='button' tabindex='1' data-bs-dismiss='modal')= self.t('cancel')
        button.btn.btn-danger(type='button' tabindex='2' data-on-click='common.blocks.confirm:ok')= self.t('ok')
