@import "nodeca.core/client/common/_variables"

.content-tabs
  display flex
  flex-wrap wrap
  gap .5rem

.content-tabs-item
  color #71858f
  background-color $decorator-color + 50%
  display flex
  font-size 0.875rem
  align-items center
  height 2rem
  border-radius 1rem
  border 1px solid #e0e6ec
  padding .25rem .75rem

  &:hover, &:active
    text-decoration none

.content-tabs-item__m-active
  background-color $brand-primary
  color white

  &:hover, &:active
    color white

.content-tabs-counter
  color #8698a1
  margin-left .25rem
  align-self flex-start
  font-size .625rem

.content-tabs-item__m-active .content-tabs-counter
  color #dfdfdf
