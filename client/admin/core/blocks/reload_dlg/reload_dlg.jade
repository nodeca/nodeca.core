.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  form.modal-dialog
    .modal-content
      .modal-header
        h4.modal-title=self.t('title')
      .modal-body=self.t('message')
      .modal-footer
        button.btn.btn-primary(type='submit' tabindex='1' data-dismiss='modal')
          =self.t('ok')
