.emoji-dlg.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  form.modal-dialog(onsubmit="return false;" role='document')
    .modal-content
      .modal-header
        h4.modal-title= self.t('title')
        button.btn-close(type='button' tabindex='-1' data-bs-dismiss='modal')
      .modal-body
        ul.emoji-dlg__list.clearfix
          each data, emoji in self.emojis
            li.emoji-dlg__item
              a.emoji-dlg__item-link(href='#' data-value=data.name title=data.aliases.join(' '))
                span.emoji(class='emoji-' + data.name)=emoji
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal')= self.t('cancel')
